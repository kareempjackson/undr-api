# Common Environment Variables
NODE_ENV=development

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=ghostpay
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/ghostpay?schema=public

# Backend
PORT=3001
JWT_SECRET=long_random_secret_for_jwt
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3002

# SMTP for emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=no-reply@ghostpay.com

# Stripe API Keys - Get these from your Stripe Dashboard
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# For Development Mode Email Handling
DEV_MODE_SKIP_EMAIL=true

# Authentication
JWT_EXPIRATION=1d
REFRESH_TOKEN_SECRET=refresh-token-secret-key
REFRESH_TOKEN_EXPIRATION=7d 