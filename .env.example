# Common Environment Variables
NODE_ENV=production

# Database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@host.railway.internal:5432/railway

# Backend
PORT=3001
JWT_SECRET=your_jwt_secret
FRONTEND_URL=https://your-frontend-url.com
ADMIN_URL=https://your-admin-url.com
PRODUCTION_URLS=https://your-frontend-url.com,https://www.your-frontend-url.com,https://your-admin-url.com

# SMTP for emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=no-reply@ghostpay.com

# Stripe API Keys
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret

# SendGrid API Key
SENDGRID_API_KEY=your_sendgrid_api_key

# Authentication
JWT_EXPIRATION=1d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRATION=7d

# IP Privacy
IP_MASK_SALT=your_ip_mask_salt

# Data Encryption
ENCRYPTION_KEY=your_encryption_key 